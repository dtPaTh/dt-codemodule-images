CMD /opt/dynatrace/oneagent/agent/lib64/dynatrace-bootstrapper --source=/opt/dynatrace/oneagent --target=/home/dynatrace/oneagent --debug --technology=nginx --install-path=/home/dynatrace/oneagent | tail -f /dev/null

